{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Steve Gill <stevengill97@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "yarn build:components",
    "build:all": "nx run-many --all --target=build",
    "postbuild:all": "[[ ! -d dist/preview ]] && [[ -d tools/preview/storybook-static ]] && rimraf dist/preview && mv tools/preview/storybook-static dist/preview || exit 0",
    "build:clean": "run-s clean build",
    "build:components": "nx run-many --all --exclude=\"tag:tooling\" --target=build",
    "postbuild:components": "yarn docs:mod",
    "build:preview": "nx run preview:build",
    "build:site": "gulp buildDocs -LLL",
    "cache:clean": "nx reset",
    "ci": "nx run-many --all --exclude=\"tag:tooling\" --target=build --skip-nx-cache",
    "ci:storybook": "nx run storybook:preview",
    "clean": "yarn cache:clean && run-p clean:*",
    "clean:components": "rimraf components/*/dist",
    "clean:docs": "rimraf dist",
    "clean:preview": "nx run preview:clean",
    "predev": "yarn build:components",
    "dev": "CHROMATIC_URL=\"http://localhost:8888\" NODE_ENV=development run-p dev:start \"start --port 8888\"",
    "dev:start": "BROWSERSYNC_OPEN=true gulp dev",
    "docs:mod": "node tasks/mod-extractor.js",
    "postdocs:mod": "prettier --cache --write components/*/metadata/*.md > /dev/null",
    "fix:styles": "stylelint --fix \"components/**/*.css\" \"!components/*/dist/**\"",
    "lint": "run-p lint:*",
    "lint:components": "node ./tasks/packageLint.js",
    "lint:styles": "stylelint \"components/**/*.css\" \"!components/*/dist/**\"",
    "mv:preview": "rimraf dist/preview && mv tools/preview/storybook-static dist/preview",
    "new": "nx run generator:new",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prepublish:site": "run-s clean:docs build:all",
    "publish:site": "gh-pages -d dist/ -f -e .",
    "release": "yarn build && lerna publish --no-private",
    "release:from-package": "yarn build && lerna publish from-package --no-private",
    "release:graduate": "yarn release --conventional-graduate --no-private",
    "release:pre": "yarn release --conventional-prerelease --preid \"${PREID:beta}\" --pre-dist-tag \"${PREID:beta}\"",
    "start": "nx run preview:start",
    "test": "nx run preview:test",
    "test:scope": "nx run preview:test:scope",
    "watch": "nx watch --all --exclude=\"tag:tooling\" --includeDependentProjects -- nx build \\$NX_PROJECT_NAME"
  },
  "workspaces": [
    "components/*",
    "tools/*",
    "plugins/*",
    ".github/actions/*"
  ],
  "devDependencies": {
    "@adobe/focus-ring-polyfill": "^0.1.5",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "conventional-changelog-spectrum": "^1.0.2",
    "gh-pages": "^5.0.0",
    "gulp": "^4.0.0",
    "gulp-replace": "^1.0.0",
    "gulplog": "^1.0.0",
    "husky": "^8.0.3",
    "lerna": "^6.6.2",
    "lint-staged": "^14.0.0",
    "loadicons": "^1.0.0",
    "lunr": "^2.3.6",
    "markdown-it": "^12.3.2",
    "npm-run-all": "^4.1.5",
    "nx": "^16.6.0",
    "prettier": "^2.8.8",
    "prettier-package-json": "^2.8.0",
    "prismjs": "^1.23.0",
    "rimraf": "^5.0.1",
    "semver": "^7.5.1",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-use-logical": "^2.1.0",
    "through2": "^3.0.1",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=14 <=18.x"
  },
  "browserslist": [
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions"
  ],
  "lint-staged": {
    "components/*/package.json": [
      "yarn lint:components",
      "prettier-package-json --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
